
- model.get_week_dates.each do |week_date|
	div class="week-column ui-week-column"
		header class=('active' if Date.today == week_date)
			span class="dayname"
				| #{week_date.dayname}
			span class="date"
				| #{week_date.strftime('%a %d %b')}

		section
			- if !model.grouped_recipes[week_date.wday].nil?
				- model.grouped_recipes[week_date.wday].each do |recipe|
					div class="card ui-thisweek-card" data-id="#{recipe.id}"
						image src="#{recipe.image_path}"
				
						span class="rating"
							i class=('fa ' + (recipe.rank >= 50 ? 'fa-thumbs-up' : 'fa-thumbs-down'))
							| #{recipe.rank}
							| %
		 				
		 				div class="overlay"
		 					span
		 						| #{recipe.description}

		footer
			button class="secondary ui-add-recipe" data-date="#{week_date}"
				i class="fa fa-plus"
				| Add Recipe